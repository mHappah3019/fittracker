<?import javafx.scene.effect.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="ingsoftware.controller.HabitListController"
            styleClass="main-container">


   <!-- Lista Abitudini Centrale -->
   <center>
      <VBox styleClass="content-section">
         <HBox styleClass="section-header">
            <Label text="Le Tue Abitudini" styleClass="section-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="addHabitButton" text="+ Nuova Abitudine" 
                    styleClass="primary-button, add-button" 
                    onAction="#handleAddHabit">
               <effect>
                  <DropShadow color="#4CAF50" radius="8"/>
               </effect>
            </Button>
         </HBox>
         
         <ListView fx:id="habitListView" styleClass="habit-list">
            <effect>
               <DropShadow color="#00000020" radius="12" offsetY="4"/>
            </effect>
         </ListView>
         
         <!-- Barra Azioni -->
         <HBox styleClass="action-bar">
            <Button fx:id="completeHabitButton" text="✅ Completa" 
                    styleClass="action-button, complete-button" 
                    onAction="#handleCompleteHabit" disable="true"/>
            <Button fx:id="editHabitButton" text="✏️ Modifica" 
                    styleClass="action-button, edit-button" 
                    onAction="#handleEditHabit" disable="true"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="statusLabel" styleClass="status-label"/>
         </HBox>
      </VBox>
   </center>

